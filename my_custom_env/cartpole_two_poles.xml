<mujoco model="cartpole_two_poles">
  <option timestep="0.01"/>
  <worldbody>
    <body name="cart" pos="0 0 0">
      <joint name="slider" type="slide" axis="1 0 0"/>
      <geom type="box" size="0.2 0.1 0.1" rgba="0 0 1 1"/>

      <body name="pole1" pos="0 0 0.1">
        <joint name="hinge1" type="hinge" axis="0 1 0" limited="false"/>
        <geom type="capsule" fromto="0 0 0 0 0 1" size="0.05" rgba="1 0 0 1"/>

        <body name="pole2" pos="0 0 1">
          <joint name="hinge2" type="hinge" axis="0 1 0" limited="false"/>
          <geom type="capsule" fromto="0 0 0 0 0 1" size="0.05" rgba="0 1 0 1"/>
        </body>
      </body>
    </body>
  </worldbody>

  <actuator>
    <motor joint="slider" ctrlrange="-1 1" gear="10"/>
  </actuator>
</mujoco>
