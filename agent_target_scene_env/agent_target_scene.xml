<mujoco model="agent_target_scene">
  <option timestep="0.01" gravity="0 0 0"/>
<asset>
  <!-- Light blue background -->
  <texture name="skybox" type="skybox" builtin="flat" rgb1="0.8 0.9 1.0" width="256" height="256"/>
</asset>
<worldbody>

    <!-- Agent root -->
    <body name="agent_root" pos="0 0 0.1">

      <!-- Agent robot (xArm7 or similar) included here -->
      <body name="attached_robot" pos="0 0 0.02">
        <include file="./ufactory_xarm7/xarm7.xml"/>
      </body>

      <!-- End effector site -->
      <site name="agent_site" pos="0.0 0 0" size="0.0001 0.001 0.001"/>

      <!-- Force sensors -->
      <!-- You can adjust pos if needed based on real EE geometry -->
      <body name="force_sensor_1" pos="0.01 -0.011 0.01">
        <geom type="box" size="0.001 0.005 0.005" rgba=".5 0 0 1"/>
        <site name="sensor_1_site" size="0.0001 0.001 0.001"/>
        <inertial mass="0.001" diaginertia="0 0 0"/>
      </body>
      <!-- Repeat sensor 2/3/4 similarly... -->
    </body>

    <!-- Target -->
    <body name="target" pos="0.1 0.0 0.0">
      <geom type="sphere" size="0.02" rgba="1 0 0 1"/>
    </body>

    <!-- Deformable object (optional) -->
    <body name="def_world" pos="0.08 0.0 0.0">
      <geom type="sphere" size="0.01" mass="100"/> 
      <joint name="def_joint_x" type="hinge" axis="1 0 0" range="-2.1 2.1"/>
      <joint name="def_joint_y" type="hinge" axis="0 1 0" range="-2.0 2.1"/>
      <joint name="def_joint_z" type="hinge" axis="0 0 1" range="-2 2.05"/>
      <composite prefix="deformable" type="cable" count="50 1 1" offset="0 0 0" size="0.1 0.05 1">
        <joint kind="main" damping="1"/>
        <geom type="cylinder" size="0.005" rgba="0.3 0.17 0.14 1"/>
      </composite>
    </body>

  </worldbody>

  <!-- Actuators (comment back in if needed) -->
  <!--
  <actuator>
    <velocity joint="slide_x" ctrlrange="-.1 .1"/>
    <velocity joint="slide_y" ctrlrange="-.1 .1"/>
    <velocity joint="slide_z" ctrlrange="-.1 .1"/>
  </actuator>
  -->

  <sensor>
    <force name="agent:eef_force" site="agent_site" cutoff="100000"/>
    <torque name="agent:eef_torque" site="agent_site" cutoff="100000"/>
    <velocimeter name="agent:eff_vel" site="agent_site"/>
    <accelerometer name="agent:eff_acc" site="agent_site" cutoff="100000"/> 
    <force name="force_sensor_1_left" site="sensor_1_site" cutoff="100000"/>
    <!-- Add remaining sensors here -->
  </sensor>

</mujoco>